#!/bin/sh


# store here all configuration for avahi snap

# list of supported keys
# all commented values
LUNDEFINED_K=$(grep -E '^#.*=' $SNAP_COMMON/etc/avahi/avahi-daemon.conf | awk -F'[=]' '{print $1}')
LUNDEFINED_V=$(grep -E '^#.*=' $SNAP_COMMON/etc/avahi/avahi-daemon.conf | awk -F'[=]' '{print $2}')
UNDEFINED_K=($LUNDEFINED_K)
UNDEFINED_V=($LUNDEFINED_V)

# all defined values
LDEFINED_K=$(grep '^[a-zA-Z].*=' $SNAP_COMMON/etc/avahi/avahi-daemon.conf | awk -F'[=]' '{print $1}')
LDEFINED_V=$(grep '^[a-zA-Z].*=' $SNAP_COMMON/etc/avahi/avahi-daemon.conf | awk -F'[=]' '{print $2}')
DEFINED_K=($LDEFINED_K)
DEFINED_V=($LDEFINED_V)

